"VertexLitGeneric"
{
	"$basetexture"	"models\weapons\c_models\c_sixshooter\v_sixshooter"
	"$envmap"	"env_cubemap"
	"$envmaptint" "[.3 .3 .3]"
	"$envmapfresnel" "1"
	"$fresnelreflection" "1"
//	"$basealphaenvmapmask" "1"
	"$basemapalphaphongmask" "1"


	"$phong" "1"
//	"$phongexponent" "15"
	"$PhongAlbedoTint" "1"
	"$phongexponenttexture"	"models\weapons\c_models\c_sixshooter\v_sixshooter_exponent"
	"$phongboost" "10"	
	"$lightwarptexture" "models\lightwarps\weapon_lightwarp"
	"$phongfresnelranges""[.5 3 3]"
	"$halflambert" "1"

	"$glowcolor" "1"
	
	"$rimlight" "1"						
	"$rimlightexponent" "20"				
	"$rimlightboost" ".25"

	"360?$color2" "[ 0.5 0.5 0.5 ]"

	"$sheenmap" 		"cubemaps/cubemap_sheen001"
	"$sheenmapmask" 		"Effects/AnimatedSheen/animatedsheen0"
	"$sheenmaptint" 		"[ 1 1 1 ]"
	"$sheenmapmaskframe" 	"0"
	"$sheenindex" 		"0"

	"$yellow" "0"

	// Cloaking
	"$cloakPassEnabled" "1"

	"$sheenPassEnabled" "1"

	"Proxies"
	{
		"AnimatedWeaponSheen"
		{
			"animatedtexturevar" 		"$sheenmapmask"
			"animatedtextureframenumvar" 	"$sheenmapmaskframe"
			"animatedtextureframerate" 		"40"
		}
		"invis"
		{
		}
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$selfillumtint"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
	}
}


